---
// Component Imports
import BaseHead from '../components/SEO/BaseHead.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/UI/Header.astro';
import FilterPosts from '../components/Blog/FilterPosts.astro'
import ListPosts from '../components/Blog/ListPosts.astro'

const title = 'Blog';
const description = 'My blog where you will find interesting articles and other things'
---
<html lang="en">
<head>
	<BaseHead {title} {description}/>
	<link rel="stylesheet" href={Astro.resolve('../styles/global.css')}>

</head>
<body>
	<BaseLayout {title} {description} lang='es'>
		<Header title='Blog' description='Tutoriales 👨‍💻, opiniones 🙋, noticias 📰 acerca de ciencia y tecnología, lo encontrarás en esta sección ⬇️'/>
		<main>
			<FilterPosts />
      <ListPosts />
		</main>
	</BaseLayout>
