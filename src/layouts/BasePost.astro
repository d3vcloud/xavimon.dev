---
import BaseLayout from '../layouts/BaseLayout.astro';

const { content } = Astro.props;
const { title, description, publishDate } = content;
---

<BaseLayout {title} {description}>
  <section class="flex flex-col items-center">
    <nav class="dark:text-white">
      <ol class="breadcrumb">
        <li class="breadcrumb-item hover:text-blue-400 dark:hover:text-amber-400"><a href="/blog">Blog</a></li>
        <li class="breadcrumb-item dark:text-gray-400" aria-current="page">{title}</li>
      </ol>
    </nav>
    <div class="flex justify-center">
      <div class="w-full">
        <h1 class="mb-6 text-3xl font-bold text-black md:text-4xl dark:text-white">{title}</h1>
        <div class="flex flex-row mb-2">
          <p class="mb-4 text-base text-gray-500 dark:text-gray-400">{publishDate}</p>
        </div>
        <div class="prose prose-lg dark:prose-invert">
          <slot />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>