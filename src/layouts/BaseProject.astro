---
import BaseLayout from '../layouts/BaseLayout.astro';
import GitHubIcon from '../../public/assets/svg/github.svg';
import JavascriptIcon from '../../public/assets/svg/javascript.svg';

const { content } = Astro.props;
const { title, description, publishDate, stack, linkRepository, linkPreview } = content;
---

<BaseLayout {title} {description}>
		<section>
      <nav class="dark:text-white">
        <ol class="breadcrumb">
          <li class="breadcrumb-item hover:text-blue-400 dark:hover:text-amber-400"><a href="/">Home</a></li>
          <li class="breadcrumb-item dark:text-gray-400" aria-current="page">{title}</li>
        </ol>
      </nav>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-3">
        <div class="lg:col-span-3">
          <h1 class="mb-6 text-3xl font-bold text-black md:text-4xl dark:text-white">{title}</h1>
          <div class="flex flex-row mb-2">
            <a href="https://github.com/d3vcloud/trivia-app" target="_blank" class="mr-3">
              <img src={GitHubIcon} alt="repository-link" width="25" height="25">
            </a>
            <p class="mb-4 text-base text-gray-500 dark:text-gray-400">{publishDate}</p>
          </div>
          <div class="text-lg text-black dark:text-slate-100">
            <slot/>
          </div>
        </div>
        <div class="lg:col-span-1">
          <div class="border-solid border border-gray-200 dark:border-none dark:bg-slate-800 rounded-xl px-4 py-6 mb-6">
            <a 
              class="text-black hover:text-blue-400 dark:hover:text-blue-400 dark:text-white text-xl font-bold mb-6" 
              href={linkPreview}
              target="_blank">
              👉 Live preview
            </a>
          </div>
          <div class="border-solid border border-gray-200 dark:border-none dark:bg-slate-800 rounded-xl px-4 py-6 mb-6">
            <a 
              class="text-black hover:text-blue-400 dark:hover:text-blue-400 dark:text-white text-xl font-bold mb-6 " 
              href={linkRepository} 
              target="_blank">
              👨‍💻 Repositorio
            </a>
          </div>
          <div class="border-solid border border-gray-200 dark:border-none dark:bg-slate-800 rounded-xl px-4 py-6 mb-6">
            <h1 class="text-black dark:text-white text-xl font-bold mb-6">🚀 Stack</h1>
            <a href="https://developer.mozilla.org/en-US/docs/Web/JavaScript" class="inline-flex bg-gray-100 rounded-2xl px-4 py-1 font-semibold text-black mb-2" target="_blank">
              <img src={JavascriptIcon} alt="github" width="25" height="25" class="mr-2"/> 
              <span class="text-base ">{stack}</span>
            </a>
            <!-- <a href="https://developer.mozilla.org/en-US/docs/Web/JavaScript" class="inline-flex bg-gray-100 rounded-2xl px-4 py-1 font-semibold text-black mb-2">
              <img src={CSSIcon} alt="github" width="15" height="25" class="mr-2"/> 
              <span class="text-base ">CSS</span>
            </a>
            <a href="https://docs.astro.build/" class="inline-flex bg-gray-100 rounded-2xl px-4 py-1 font-semibold text-black">
              <img src={AstroIcon} alt="github" width="25" height="25" class="mr-2"/> 
              <span class="text-base">Astro</span>
            </a> -->
          </div>
        </div>
      </div>
    </section>
	</BaseLayout>