---
export interface Props {
  post: any
}

const { post } = Astro.props;
const { title, description, publishDate, url } = post;
---
<article class="rounded-xl mb-7">
  <header class="mb-2">
    <a href={url} class="text-xl font-semibold text-black dark:text-white">{title}</a>
    <p class="text-slate-600 dark:text-slate-400 font-semibold">{publishDate}</p>
  </header>
  <p class="text-base text-gray-700 dark:text-gray-400 mb-2">
    {description}
  </p>
  <a href={url} class="text-base font-medium text-orange-600 hover:text-blue-400 dark:hover:text-amber-400">Leer m√°s</a>
</article>