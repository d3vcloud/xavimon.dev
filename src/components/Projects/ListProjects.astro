---
import Project from './Project.astro';

// Data Fetching: List all Markdown Projects in the repo.
let allProjects = await Astro.fetchContent('../../pages/projects/*.md');
allProjects = allProjects.sort((a, b) => new Date(b.publishDate).valueOf() - new Date(a.publishDate).valueOf());
---
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
  {
    allProjects.map(project => <Project {project}/>)
  }
</div>
