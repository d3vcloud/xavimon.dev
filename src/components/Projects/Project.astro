---
import GitHubIcon from '../../../public/assets/svg/github-dark.svg';

export interface Props {
  title: string;
  description: string;
  slug: string;
}
const { title,description,slug } = Astro.props;
---
<!-- bg-gradient-to-r p-1 from-[#008f68] to-[#fae042] -->
<div class="transform hover:scale-[1.01] transition-all rounded-xl">
  <div class="dark:bg-slate-800 rounded-lg overflow-hidden">
    <img class="w-50 h-50" src="/images/testing.jpeg" alt="Mountain">
    <div class="px-4 py-4">
      <div class="text-xl text-white mb-4">{title}</div>
      <p class="text-gray-400 text-sm">
        {description}
      </p>
    </div>
    <div class="flex flex-row justify-between px-4 pt-4 pb-2">
      <a class="inline-block" href="https://github.com/d3vcloud/trivia-app" target="_blank">
        <img src={GitHubIcon} alt="repository-link" width="25" height="25">
      </a>
      <a href="/details/2" class="inline-block bg-gray-200 rounded-lg px-3 py-1 text-sm font-semibold text-gray-700 mb-2">Conocer m√°s</a>
    </div>
  </div>
</div>  