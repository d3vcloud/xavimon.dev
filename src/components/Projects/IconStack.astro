---
import getInformationTool from '../../lib/getInformationTool';

export interface Props {
  tool: string;
}
const {tool} = Astro.props;

const information = getInformationTool(tool);
const { url, icon } = information;
---

<a href={url} class="inline-flex bg-gray-100 rounded-2xl px-4 py-1 font-semibold text-black mb-2" target="_blank">
  <img src={icon} alt={tool} width="15" height="25" class="mr-2"/> 
  <span class="text-base ">{tool}</span>
</a>